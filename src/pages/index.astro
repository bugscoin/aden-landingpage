---
import Layout from '../layouts/Layout.astro';
import Partner from '../components/Partner.astro';
import SecurityPartner from '../components/SecurityPartner.astro';
import ExchangeSelectModal from '../components/ExchangeSelectModal.astro';
---

<Layout title="Aden - DeFi Trading Platform">
	<main class="relative min-h-screen overflow-hidden">
		<!-- Hero Section -->
		<section class="hero-section relative pt-20 pb-32 px-4">
			<div class="container mx-auto max-w-6xl">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
					<div class="hero-content space-y-6">
						<h1 class="text-5xl lg:text-6xl font-bold leading-tight">
							Trade Smarter with <span class="gradient-text">Aden</span>
						</h1>
						<p class="text-xl text-gray-300 leading-relaxed">
							Professional-grade DeFi trading platform with advanced features and institutional security.
						</p>
						<div class="cta-buttons flex flex-wrap gap-4">
							<button class="btn-primary px-8 py-4 rounded-lg font-semibold">
								Get Started
							</button>
							<button class="btn-secondary px-8 py-4 rounded-lg font-semibold">
								Learn More
							</button>
						</div>
					</div>
					<div class="hero-image">
						<img src="/sky_background.webp" alt="Trading Dashboard" class="rounded-2xl shadow-2xl" />
					</div>
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section class="features-section py-20 px-4">
			<div class="container mx-auto max-w-6xl">
				<h2 class="text-4xl font-bold text-center mb-16">Why Choose Aden</h2>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="feature-card p-8 rounded-xl">
						<img src="/secured.webp" alt="Security" class="w-16 h-16 mb-4" />
						<h3 class="text-2xl font-semibold mb-3">Bank-Grade Security</h3>
						<p class="text-gray-400">Multi-sig wallets and cold storage protection</p>
					</div>
					<div class="feature-card p-8 rounded-xl">
						<img src="/rocket.webp" alt="Speed" class="w-16 h-16 mb-4" />
						<h3 class="text-2xl font-semibold mb-3">Lightning Fast</h3>
						<p class="text-gray-400">Execute trades in milliseconds</p>
					</div>
					<div class="feature-card p-8 rounded-xl">
						<img src="/wallet.webp" alt="Liquidity" class="w-16 h-16 mb-4" />
						<h3 class="text-2xl font-semibold mb-3">Deep Liquidity</h3>
						<p class="text-gray-400">Access to major exchanges and liquidity pools</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Partners Section -->
		<section class="partners-section py-20 px-4 bg-gradient-to-b from-transparent to-gray-900/50">
			<div class="container mx-auto max-w-6xl">
				<h2 class="text-3xl font-bold text-center mb-12">Trusted Partners</h2>
				<Partner />
				<div class="mt-16">
					<h3 class="text-2xl font-bold text-center mb-8">Security Audited By</h3>
					<SecurityPartner />
				</div>
			</div>
		</section>

		<ExchangeSelectModal />
	</main>
</Layout>

<style>
	.gradient-text {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.btn-primary {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		transition: transform 0.2s;
	}

	.btn-primary:hover {
		transform: translateY(-2px);
	}

	.btn-secondary {
		border: 2px solid #667eea;
		color: #667eea;
		background: transparent;
		transition: all 0.2s;
	}

	.btn-secondary:hover {
		background: #667eea;
		color: white;
	}

	.feature-card {
		background: rgba(255, 255, 255, 0.05);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		transition: transform 0.3s;
	}

	.feature-card:hover {
		transform: translateY(-5px);
	}
</style>
